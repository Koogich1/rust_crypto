# Database (local development)
DATABASE_URL=postgres://user:password@localhost:5432/simple_api
RUST_LOG=trace
TEST_DATABASE_URL=postgres://user:password@localhost:5434/simple_api_test

# CoinGecko API Key (optional - enables 10s interval, otherwise 60s)
CRYPTO_API_KEY=YOUR_COINGECKO_API_KEY

# API Secret Token for Authorization: Bearer <token>
# Generate with: openssl rand -hex 32
API_SECRET_TOKEN=YOUR_SECRET_TOKEN_HERE

# Production Database (for docker-compose.prod.yml)
DB_USER=crypto_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=crypto_api